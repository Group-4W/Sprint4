    input(type="text" name="N" placeholder="Enter how many to display, type all for all.")
    input(type='submit' value='Submit')

  p /capitals type 'the world', a continent, or region.
  form(action='/capitals', method='POST')
    input(type="text" name="place" placeholder="Enter 'the world', a continent, or region.")
    input(type="text" name="N" placeholder="Enter how many to display, type all for all.")
    input(type='submit' value='Submit')

  p /city-population type 'country', 'continent', or 'region'.
  form(action='/city-population', method='POST')
